<%= form_tag do %>
  <%= csrf_meta_tags %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
<% end %>

<style>
    body { font-family: Arial, sans-serif; }
</style>

<body>
<h1>Department: <%= @department.name %></h1>
<div>Department ID: <%= @department.id %></div>

<h2>Users</h2>

<% @users.each do |user| %>
     <li>
      <a href="<%= user_path(user) %>">
      Employee ID: <%= user.id %><br>
      Employee Name: <%= user.Name %>
    </li> 
<% end %>
<p>
  <%= link_to "New User", new_user_path %>
</p>

<p>
<%= link_to "Edit", edit_department_path(@department) %><br>
<%= link_to "Destroy", @department, method: :delete, data: { confirm: 'Are you sure?' } %><br> 
<%= link_to "Back", "/departments" %>
</p>
</body>