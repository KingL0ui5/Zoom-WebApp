<style>
    body { font-family: Arial, sans-serif; }
</style>

<body>
<h1>EmployeeID: <%= @user.EmployeeID %></h1>

<p>Name: <%= @user.Name %></p>
<p>EmailAddress: <%= @user.EmailAddress %></p>
<p>Department: <%= @user.Department %></p>

<ul>
    <li><%= link_to "Edit", edit_user_path(@user) %></li>
    <li><%= link_to "Destroy", user_path(@user), data: {
                        turbo_method: :delete, 
                        turbo_confirm: "Are you sure?"
                        } %></li> 
</ul>

<p><%= link_to "Go back", "/users" %></p>
</body>